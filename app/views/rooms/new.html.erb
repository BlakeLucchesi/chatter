<h2>Create New Chat Room</h2>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div id="new-form">
  <%= form_for @room, :url => { :action => "create" }, :html => {:class => "nifty_form"} do |f| %>

    <div class="form-item">
      <%= label_tag('Chat Topic:') %>
      <%= f.text_field(:title) %>
    </div>

    <div class="form-item checkbox">
      <label>Private: <%= f.check_box(:private) %></label>
      <%= text_field_tag(:password_label, '', :size => 15) %> <%= f.password_field(:password, :size => 15) %>
    </div>

    <%= submit_tag("Create Room") %>
  <% end %>
</div>

<div id="new-help">
  <p>This is a description about the service.</p>
</div>